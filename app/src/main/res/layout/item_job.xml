<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_xsmall"
                                    android:layout_marginRight="@dimen/margin_xsmall"
                                    android:layout_marginTop="@dimen/margin_xsmall"
                                    app:cardElevation="@dimen/elevation_normal">

    <RelativeLayout
        android:id="@+id/job_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_normal">

        <TextView
            android:id="@+id/customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large"
            android:textStyle="bold"
            tools:text="Customer name"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customer"
            android:layout_marginTop="@dimen/margin_normal"
            tools:text="33.50eur"/>

        <TextView
            android:id="@+id/job_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/price"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_toEndOf="@+id/price"
            android:layout_toRightOf="@+id/price"
            tools:text="16:00"/>

        <TextView
            android:id="@+id/recurrence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/price"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_toEndOf="@+id/job_time"
            android:layout_toRightOf="@+id/job_time"
            tools:text="@string/recurrence_biweekly"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>