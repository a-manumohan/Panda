<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg_window</item>
    </style>

    <style name="title">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_title</item>
    </style>

    <style name="label_job_detail">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/label_job_detail</item>
    </style>

    <style name="content_job_detail">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/content_job_detail</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
